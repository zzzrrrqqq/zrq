/* pages/spdetail/spdetail.wxss */
.spdetail{
  padding-bottom: 48px;
}
.swiper_image {
      width: 100%;
}
.goods_info_top{
      background: #fff;
}
.goods_title{
      padding:10px 70px 10px 10px;
      font-size: 14px;
      color:#535353;
      height: 40px;
      line-height: 20px;
      position: relative
}
.goods_collect_btn{
      position: absolute;
      width: 70px;
      height: 40px;
      border-left: 1px solid #E5E5E5;
      top: 10px;
      right: 0px;
      text-align: center;
}
.goods_collect_btn image{
      width: 22px;
      height: 22px;
}
.goods_collect_btn text{
      font-size: 12px;
      color:#535353;
      display: block;
      line-height: 10px;
}
.goods_price{
      font-size: 14px;
      padding:10px;
      color: #FF0000;
      border-bottom: 1px solid #E5E5E5;
}
.goods_price .old_price{
      color:#535353;
      font-size: 12px;
      text-decoration: line-through;
}
.goods_deliver{
      height: 30px;
      line-height: 30px;
      padding:0 10px;
      font-size: 10px;
}
.fl{
  float: left;
}
.auto-img{
  width: 100%;
  display: block;
}
.goods_content{
  overflow: hidden;
  margin-top: 10px;
  padding: 10px;
  background-color: #fff;
}
.goods_content>.c-img{
  width: 35px;
}

.goods_content>.c-text{
  width: calc(100% - 35px);
  font-size: 12px;
}
.goods_info_list{
      margin-top: 10px;
      background: #fff;
      padding:10px;
      font-size: 12px;
}
.goods_info_list .item{
      height: 18px;
      line-height: 18px;
}
.goods_info_list .item text{
      width: 85px;
}
.goods_detail{
      margin-top: 10px;
      background: #fff;
      margin-bottom: 48px;
}
.goods_detail .title{
      padding:10px;
      font-size: 14px;
}

/* 底部导航 */
.goods_bottom_btn{
      position: fixed;
      bottom: 0px;
      left: 0px;
      height: 47px;
      border-top: 1px solid #E5E5E5;
      width: 100%;
      background: #fff;
}
.goods_bottom_btn image{
      float: left;
      width: 22px;
      height: 22px;
}
.goods_bottom_btn .btn{
      float: left;
      width: 25%;
      text-align: center;
      height: 47px;
      line-height: 47px;
      font-size: 12px;
      color: #fff;
}
.goods_bottom_btn .num{
      width: 22px;
      height: 22px;
      margin: 13px auto;
      position: relative;

}
.goods_bottom_btn .num text{
      position: absolute;
      top:0px;
      right: -6px;
      width: 12px;
      height: 12px;
      background: #FF0000;
      color: #fff;
      border-radius: 50%;
      font-size: 10px;
      text-align: center;
      line-height: 12px;
}
.goods_bottom_btn .bt2{
      background: #FFA500;
}
.goods_bottom_btn .bt3{
      background: #00AAEF;
}
.goods_bottom_btn .bt4{
      background: #69C3AA;
}
