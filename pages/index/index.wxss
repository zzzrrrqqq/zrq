.swiper_image {
      width: 100%;
}

/* 分类 */

.category {
      padding: 15px 0px 10px 0px;
      background: #fff;
}

.category .item {
      width: 25%;
      float: left;
      margin-bottom: 10px;
} 

.category .wrap {
      width: 40px;
      margin: 0 auto;
}

.category .wrap image {
      width: 40px;
      height: 40px;
}

.category .wrap text {
      font-size: 12px;
      text-align: center;
      color: #737373;
      display: block;
}

/* 通用样式 */

.common_title {
      font-size: 20px;
      color: #001c37;
      height: 40px;
      line-height: 40px;
      padding-left: 12px;
      border-bottom: 1px solid #d5d5d5;
      margin-top: 10px;
      background: #fff;
}

/* 电影 */

.movie {
      text-align: center;
      background: #fff;
}

.movie .text {
      font-size: 16px;
      text-align: center;
      height: 42px;
      font-weight: bold;
      line-height: 42px;
}

.movie image {
      width: 100%;
}

/* 商品 */

.goods_list {
      height: 100px;
      background: #fff;
      padding-left: 100px;
      position: relative;
}

.goods_list .goods_left {
      position: absolute;
      top: 10px;
      left: 10px;
}

.goods_list .goods_left image {
      width: 80px;
      height: 80px;
}

.goods_right{
      padding: 10px 0;
      height: 80px;
}
.goods_name{
      font-size: 16px;
      color:#19101A;
      font-weight: bold;
      height: 44px;
      overflow: hidden;
}
.goods_address{
      font-size: 12px;
      color:#A2A2A2;
}
.goods_price{
      font-size: 14px;
      color: #FF1494;
      font-weight: bold;
      margin-top: 5px;
}
.goods_car{
      position: absolute;
      bottom: 0px;
      right: 10px;
}
.goods_car image{
      width: 22px;
      height: 22px;
}